%%% define an evironment for showing the contents of a file
\newenvironment{filesays}[1]
{
	\begin{list}{}
	{
		\setlength\leftmargin{0.5in}
		\setlength\rightmargin{0.7in}
		\setlength\topsep{-5pt}
	}
	\item[]
	File contents: \texttt{#1} \\ 
	\rule{\linewidth}{0.4pt} \par
	\ttfamily
}
{
	\end{list}
}

